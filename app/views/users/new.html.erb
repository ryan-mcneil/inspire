<div class='form'>
  <h2>New User Registration</h2>
  <%= form_for @user do |f| %>
    <%= f.label :email %>:
    <%= f.text_field :email %>

    <br><%= f.label :username %>:
    <%= f.text_field :username %>

    <br><%= f.label :password %>:
    <%= f.password_field :password %>

    <br><%= f.label :password_confirmation %>:
    <%= f.password_field :password_confirmation %>

    <br><%= f.submit "Create Account" %>
  <% end %>
</div>
